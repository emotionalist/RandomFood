<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:text="안심돈가스"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/item_menu_name"
        />

    <TextView
        android:text="12000원"
        android:layout_marginTop="3dp"
        android:id="@+id/item_menu_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_menu_name"
        app:layout_constraintStart_toStartOf="@id/item_menu_name"
        />

    <View
        app:layout_constraintTop_toBottomOf="@id/item_menu_price"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="4dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="@id/item_menu_price"/>

</androidx.constraintlayout.widget.ConstraintLayout>